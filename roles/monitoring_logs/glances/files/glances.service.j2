[Unit]
Description=Glances
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker-compose -f {{ glances_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker-compose -f {{ glances_directory }}/docker-compose.yml down
WorkingDirectory={{ glances_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
