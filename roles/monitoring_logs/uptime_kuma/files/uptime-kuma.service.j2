[Unit]
Description=Uptime Kuma
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker compose -f {{ uptime_kuma_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker compose -f {{ uptime_kuma_directory }}/docker-compose.yml down
WorkingDirectory={{ uptime_kuma_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
