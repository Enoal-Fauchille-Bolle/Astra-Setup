[Unit]
Description=Dozzle
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker compose -f {{ dozzle_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker compose -f {{ dozzle_directory }}/docker-compose.yml down
WorkingDirectory={{ dozzle_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
