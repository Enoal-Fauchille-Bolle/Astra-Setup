[Unit]
Description=Netdata
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker compose -f {{ netdata_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker compose -f {{ netdata_directory }}/docker-compose.yml down
WorkingDirectory={{ netdata_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
