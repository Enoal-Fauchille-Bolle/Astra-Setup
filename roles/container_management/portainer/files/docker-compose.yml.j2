name: portainer
services:
  portainer:
    container_name: portainer
    image: 'portainer/portainer-ce:{{ portainer_version }}'
    ports:
      - '{{ portainer_api_port }}:8000'
      - '{{ portainer_port }}:9443'
    restart: always
    volumes:
      - '/var/run/docker.sock:/var/run/docker.sock'
      - 'portainer_data:/data'
volumes:
  portainer_data:
    external: false
