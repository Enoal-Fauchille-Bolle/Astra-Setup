[Unit]
Description=Portainer
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker compose -f {{ portainer_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker compose -f {{ portainer_directory }}/docker-compose.yml down
WorkingDirectory={{ portainer_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
