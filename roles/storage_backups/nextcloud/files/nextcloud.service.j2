[Unit]
Description=Nextcloud
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker compose -f {{ nextcloud_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker compose -f {{ nextcloud_directory }}/docker-compose.yml down
WorkingDirectory={{ nextcloud_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
