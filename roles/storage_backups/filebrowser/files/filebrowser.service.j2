[Unit]
Description=Filebrowser
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker compose -f {{ filebrowser_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker compose -f {{ filebrowser_directory }}/docker-compose.yml down
WorkingDirectory={{ filebrowser_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
