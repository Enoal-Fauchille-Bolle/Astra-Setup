[Unit]
Description=Nginx Proxy Manager
After=network.target

[Service]
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/docker compose -f {{ npm_directory }}/docker-compose.yml up
ExecStop=/usr/bin/sudo /usr/bin/docker compose -f {{ npm_directory }}/docker-compose.yml down
WorkingDirectory={{ npm_directory }}
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
